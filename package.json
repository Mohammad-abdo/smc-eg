{
  "name": "smc-dashboard-api",
  "version": "1.0.0",
  "description": "Backend API for SMC Dashboard",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup:env": "node setup-env.js",
    "prisma:generate": "node setup-env.js && npx prisma generate",
    "prisma:migrate": "node setup-env.js && npx prisma migrate dev",
    "prisma:migrate:deploy": "node setup-env.js && npx prisma migrate deploy",
    "prisma:studio": "node setup-env.js && npx prisma studio",
    "prisma:push": "node setup-env.js && npx prisma db push",
    "seed": "node prisma/seed.js",
    "test:connection": "node test-connection.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "keywords": [
    "api",
    "dashboard",
    "smc"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.21.1",
    "multer": "^2.0.2",
    "mysql2": "^3.11.5",
    "prisma": "^7.0.1"
  },
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
